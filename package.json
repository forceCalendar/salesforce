{
  "name": "@forcecalendar/salesforce",
  "version": "1.0.0",
  "description": "ForceCalendar Salesforce Integration",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "cd src && npm install",
    "deploy:src": "cd src && sf project deploy start",
    "deploy:dist": "cd dist && sf project deploy start",
    "prepare-release": "npm run build && cd dist && zip -r ../forcecalendar-salesforce.zip ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forceCalendar/salesforce.git"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.0.0"
  }
}